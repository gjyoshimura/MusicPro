    <%= f.label :video_url %><br>
    <%= f.text_field :video_url %>
  </div>
  <div class="field">
    <%= f.label :topic_id %><br>
    
    <%= f.select :topic_id, options_for_select(Topic.all.collect{ |u| [u.name, u.id] }) %>
