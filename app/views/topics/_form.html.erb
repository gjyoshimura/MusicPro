    <%= f.select :style_id, options_for_select(Style.all.collect{ |u| [u.name, u.id] }) %>
  </div>
  <div class="field">
    <%= f.label :instrument_id %><br>
    <%= f.select :instrument_id, options_for_select(Instrument.all.collect{ |u| [u.name, u.id] }) %>
  </div>
  
  
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  
  
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
