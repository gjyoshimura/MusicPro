		<!-- Wrapper -->
			<div id="wrapper">

				<!-- Main -->
					<div id="main" class="alt">

						<!-- One -->
							<section id="one">
								<div class="inner">
									<header class="major">
										<h1><%= @lesson.name %></h1>
									</header>
									<p><%= @lesson.description %></p>
									<span class="image main">
									    
									<iframe width="100%" height="600" src="<%=  @lesson.video_url %>" frameborder="0" allowfullscreen></iframe>    
									    
									</span
									
								</div>
								<div class="inner">
									<h2>Comentários</h2>
									<p>
									<% @comments.each do |comment| %>
										<% if comment.user.id == current_user.id%>
											<strong><%= comment.user.email %>:</strong> <%= comment.body %> <%= link_to "- Excluir", {:controller => "comments", :action => 'destroy', :id => comment.id}, :confirm => "Tem certeza que deseja excluir este comentário?", :method => :delete %>
										<% else %>
											<strong><%= comment.user.email %>:</strong> <%= comment.body %>
										<% end %>
										<br>
									<% end %>
									</p>
									 <%= render :partial => "comments/form", :locals => {:comment => Comment.new, :lesson => @lesson.id} %>
								</div>
							</section>
					</div>

		

			<!-- Footer -->
					<%= render :partial => "lyris/partials/footer" %>

			</div>

		<!-- Scripts -->

